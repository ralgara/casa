#!/usr/bin/env bash

case "$TERM" in
    xterm|xterm-color|*-256color) color_prompt=yes;;
esac

force_color_prompt=yes

BLUE="\033[0;34m"
CYAN="\033[0;36m"
GRAY="\033[1;30m"
GREEN="\033[0;32m"
LIGHT_BLUE="\033[1;34m"
LIGHT_GRAY="\033[0;37m"
LIGHT_GREEN="\033[1;32m"
LIGHT_RED="\033[1;31m"
PURPLE="\033[0;35m"
RED="\033[0;31m"
WHITE="\033[0;37m"
YELLOW="\033[1;33m"

function parse_git_branch {
    git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ \(\1\)/';
}
function parse_git_status {
    git status 2> /dev/null | grep -E 'working .+ clean' | wc -l;
}
function check_git_changes {
    [ `parse_git_status` -ne 1 ] && echo -e $LIGHT_RED || echo -e $LIGHT_GREEN
}

case "$TERM" in
xterm*|rxvt*|screen*)
    export PS1="$WHITE(\$(whoami)@$(hostname -s)) $BLUE\$(date +'%F %R:%S %Z')\[\$(check_git_changes)\]\$(parse_git_branch) $YELLOW\w $(tput sgr0)\n$ "
    ;;
*)
    export PS1="(\$(whoami)@$(hostname)) \$(date +'%F %R:%S %Z') \w\[\$(check_git_changes)\]\$(parse_git_branch)\n$ "
    ;;
esac
export PS4='+(${BASH_SOURCE}:${LINENO})'

export PROMPT_COMMAND="history -a; history -c; history -r"
